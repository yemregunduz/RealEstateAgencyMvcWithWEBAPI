@model RealEstateAgencyMVC.Models.UserForRegisterDtoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container h-100">
    <div class="row h-100">
        <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
            <div class="d-table-cell align-middle">

                <div class="text-center mt-4">
                    <h1 class="h2">Get started</h1>
                    <p class="lead">
                        Start creating the best possible user experience for you customers.
                    </p>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="m-sm-4">
                            <form method="post">
                                @using (Html.BeginForm("register", "auth"))
                                {
                                    <div class="form-group">
                                        <label>Company</label>
                                        <input class="form-control form-control-lg" type="text" name="companyName" placeholder="Şirket adını giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control form-control-lg" type="email" name="email" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input class="form-control form-control-lg" type="password" name="password"  placeholder="Şifre">
                                    </div>
                                    <div class="form-group">
                                        <label>Kullanıcı Tipi</label>
                                        <select class="form-control" id="userType" name="userType" >
                                            <option value="admin">Yönetici</option>
                                            <option value="realestate">Emlakçı</option>
                                            
                                        </select>
                                    </div>
                                    <div class="form-group" style="visibility:hidden">
                                        <input type="text" name="status" value="true" />
                                    </div>
                                    <div class="text-center mt-3">
                                        <a class="btn btn-lg btn-primary">Sign up</a>
                                        <!-- <button type="submit" class="btn btn-lg btn-primary">Sign up</button> -->
                                    </div>

                                }

                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>